#include<stdio.h>
#include<conio.h>
#include<windows.h>
int main()
{
int h=0,m=0,s=0 ,ms=0;
    printf("Please enter the current time in HH:MM:SS format-\n");
    scanf("%d %d %d %d",&h,&m,&s,&ms);
    for(h;h<24;h++)
    {
    	for(m;m<60;m++)
    	{
    		for(s;s<60;s++){
    		for(ms-1;ms<60;ms++)
    		{
    			printf("n\n\n\t\t\t %2d:%2d:%2d:%2d",h,m,s,ms);
    				if (h<=12)
    				printf("AM ");
    				else
    				printf("PM ");
    			
				system("cls");		
			}ms=0;
		}s=0;
}m=0;
	
}h=0;
getch();
